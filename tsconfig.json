{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "es5",
      "ES2015",
      "es2015.collection"
    ],
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": false,
    "skipLibCheck": true 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
